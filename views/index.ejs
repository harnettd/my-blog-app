<!DOCTYPE html>
<html lang="en" dir="ltr">
  <%- include("partials/head.ejs") %>

  <body>
    <main id="main">
      <h1>My Blog App!</h1>

      <form class="create-post-form" action="/create" method="post">
        <input
          class="create-post-form__title"
          type="text"
          name="title"
          required
          placeholder="Add a title..."
        />
        <textarea
          class="create-post-form__text"
          name="bodyCopy"
          rows="6"
          required
          placeholder="Add some text..."
        ></textarea>
        <input class="create-post-form__create" type="submit" value="Create" />
      </form>

      <% if (blog.length >= 1) { %>
      <ol class="blog-posts">
        <% blog.forEach((post)=> { %>
        <li class="blog-posts__item">
          <h2 class="blog-posts__title"><%= post.title %></h2>
          <p class="blog-posts__text"><%= post.body_copy %></p>
          <p class="blog-posts__date"><%= post.created_date %></p>
          <p class="blog-posts__date"><%= post.last_edited_date %></p>
          <form>
            <input type="hidden" name="id" value="<%= post.id %>" />
            <input type="hidden" name="title" value="<%= post.title %>" />
            <input type="hidden" name="text" value="<%= post.body_copy %>" />
            <div class="blog-posts__btn-row">
              <input
                class="blog-posts__edit"
                type="submit"
                formaction="/edit"
                formmethod="post"
                value="Edit"
              />
              <input
                class="blog-posts__delete"
                type="submit"
                formaction="/delete"
                formmethod="post"
                value="Delete"
              />
            </div>
          </form>
        </li>
        <% }); %>
      </ol>
      <% } %>
    </main>
  </body>
</html>
