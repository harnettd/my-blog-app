<!DOCTYPE html>
<html lang="en" dir="ltr">
  <%- include("partials/head.ejs") %>

  <body>
    <main id="main">
      <h1>Edit Blog Post</h1>

      <form class="edit-post-form">
        <input type="hidden" name="id" value="<%= id %>" />
        <input
          class="edit-post-form__title"
          type="text"
          name="title"
          value="<%= title %>"
        />
        <textarea class="edit-post-form__text" name="text" rows="6">
<%= text %></textarea
        >
        <div class="edit-post-form__btn-row">
          <input
            class="edit-post-form__update"
            type="submit"
            formaction="/update"
            formmethod="post"
            value="Submit"
          />
          <input
            class="edit-post-form__cancel"
            type="submit"
            formaction="/"
            formmethod="get"
            value="Cancel"
          />
        </div>
      </form>
    </main>
  </body>
</html>
